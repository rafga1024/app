@model WeatherWeb.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Login</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>
            <div><input type="submit" value="Log in" class="btn btn-success" /></div>
        </form>

    </div>
</div>